<ul>
  <% @recipes.each do |recipe| %>
    <li><a href="/recipes/<%= recipe.id %>"><%= recipe.title %></a> <%= recipe.stars %></li>
  <% end %>
</ul>

<%= render('layouts/errors', object: @recipe) %>

