<%= form_for(@recipe) do |f| %>
    <div class = "form-group">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
    <div class = "form-group">
      <%= f.label :recipe_description %>
      <%= f.text_field :recipe_description %>
    </div>
    <div class = "form-group">
      <%= f.label :stars %>
      <%= f.select(:stars, options_for_select(['☆', '☆☆', '☆☆☆', '☆☆☆☆', '☆☆☆☆☆']), :class => 'genForm_dropBox'%>
    </div>
    <div class = "form-group">
      <%= f.label :tags_recipes %>
      <%= f.select("post", "tag_id", Tag.find(:all).collect { |t| t.name } ) %>
    </div>
    <%= f.submit(:class => "btn btn-default") %>
<% end %>
