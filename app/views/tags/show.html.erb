<% content_for(:title, "#{@tag.name} | Recipes") %>

<h1> <%= @tag.name %> </h1>

<h3> Recipes </h3>

<ul>
  <% @tag.recipes.each do |recipe| %>
    <li><a href="/recipes/<%= recipe.id %>"><%= recipe.title %></a> <%= recipe.stars %></li>
  <% end %>
</ul>

<p><a href="/recipes/">Add a recipe</a></p>

<p><a href="/tags/<%= @tag.id %>"
      data-confirm="You sure?"
      data-method="delete"
      rel="nofollow">Delete</a></p>

<p><a href="/tags">Return to tags</a></p>
